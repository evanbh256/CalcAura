generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  password      String
  avatarUrl     String?
  auraScore     Int       @default(1000)
  isAdmin       Boolean   @default(false)
  reportsFiled  Incident[] @relation("Reporter")
  reportsAgainst Incident[] @relation("Offender")
  votes         Vote[]
  judgedIncidents Incident[] @relation("Judge")
}

model Incident {
  id            String    @id @default(cuid())
  description   String
  auraAmount    Int
  evidenceUrl   String?
  status        String    @default("PENDING") // PENDING, DISPUTED, APPROVED, REJECTED
  createdAt     DateTime  @default(now())
  expiresAt     DateTime
  
  reporterId    String
  reporter      User      @relation("Reporter", fields: [reporterId], references: [id])
  
  offenderId    String
  offender      User      @relation("Offender", fields: [offenderId], references: [id])
  
  judgeId       String?
  judge         User?     @relation("Judge", fields: [judgeId], references: [id])
  
  votes         Vote[]
}

model Vote {
  id            String    @id @default(cuid())
  type          String    // AGREE, DISAGREE
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  incidentId    String
  incident      Incident  @relation(fields: [incidentId], references: [id])
  createdAt     DateTime  @default(now())

  @@unique([userId, incidentId])
}

model Season {
  id            String    @id @default(cuid())
  month         Int
  year          Int
  winnerId      String
  winnerName    String
  winnerScore   Int
  createdAt     DateTime  @default(now())
}
